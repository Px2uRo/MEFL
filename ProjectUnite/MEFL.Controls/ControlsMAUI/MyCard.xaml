<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MEFL.Controls.MyCard">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Border StrokeThickness="{TemplateBinding BorderThickness}" Stroke="{TemplateBinding BorderBrush}" 
                    x:Name="PART_Border" StrokeShape="{DynamicResource RES_StrokeShape}">
                <Grid>
                    <Button Text="ChangeMe" Clicked="Button_Clicked" WidthRequest="40" HeightRequest="40" Margin="0,2,2,0" HorizontalOptions="End" VerticalOptions="Start"/>
                </Grid>
            </Border>
        </ControlTemplate>
    </ContentView.ControlTemplate>
    <ContentView.Resources>
        <RoundRectangle x:Key="RES_StrokeShape"/>
    </ContentView.Resources>
</ContentView>