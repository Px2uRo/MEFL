<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
			 Width="300" 
			 x:Class="MEFL.Views.DialogContents.GamesManagerContent">
  <Grid Margin="3" RowDefinitions="auto,*,auto">
	  <StackPanel Grid.Row="0">
		  <TextBlock Text="选择文件夹："/>
		  <Grid ColumnDefinitions="*,auto">
			  <ComboBox SelectedIndex="{Binding SelectedFolderIndex}" Items="{Binding MyFolders}"/>
			  <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
				  <Button Name="ExploreFolderBtn" Content="E" Width="30"/>
				  <Button Name="DelFolderBtn" Content="×" Width="30"/>
				  <Button Name="AddFolderBtn" Content="+" Width="30" />
			  </StackPanel>
		  </Grid>
		  <Grid ColumnDefinitions="*,auto">
			  <TextBox Name="SearchBox"/>
			  <Button Grid.Column="1" Name="SearchBtn" Content="S" Width="30" />
		  </Grid>
	  </StackPanel>
	  <ScrollViewer Grid.Row="1">
		  <StackPanel Name="Games" Margin="0,0,20,0"/>
	  </ScrollViewer>
  <Button Grid.Row="2" VerticalAlignment="Bottom" Margin="0,5,20,0" HorizontalAlignment="Center" Name="CancelBtn" Width="295">
	  <TextBlock Text="取消" HorizontalAlignment="Center"/>
	  </Button>
  </Grid>
</UserControl>
