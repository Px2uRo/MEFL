<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             Background="White" Width="500" Height="300" 
             x:Class="MEFL.Views.DialogContents.JavaManagerDialog">
	<Grid RowDefinitions="100,100,100">
		<TextBlock Text="你的 Java 不对劲！" Name="CustomHint" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="24"/>
		<TextBlock Grid.Row="1" Name="InfoTB" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<StackPanel HorizontalAlignment="Center" Grid.Row="2" Orientation="Horizontal">
			<Button Name="ForceBtn" Content="强制使用此 Java" Margin="3"/>
			<Button Name="ApplyBtn" Content="让 MEFL 自动选择" Margin="3"/>
			<Button Name="CancelBtn" Content="取消" Margin="3"/>
		</StackPanel>
	</Grid>
</UserControl>
