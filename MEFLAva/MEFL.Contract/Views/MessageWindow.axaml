<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="300" Height="200"
        x:Class="MEFL.Contract.Views.MessageWindow"
        Title="MessageWindow">
	<Grid>
		<ScrollViewer Margin="3" Height="185" VerticalAlignment="Top">
			<Grid Margin="20">
				<TextBlock Name="MyTB" TextWrapping="Wrap"/>
				<StackPanel Name="MyCheckBoxs" VerticalAlignment="Bottom"/>
			</Grid>
		</ScrollViewer>
		<StackPanel Height="35" Orientation="Horizontal" Name="MyButtons" VerticalAlignment="Bottom" Margin="0,0,30,15" HorizontalAlignment="Right">
			<Button Width="75" Height="30" Margin="3" x:Name="R3"/>
			<Button Width="75" Height="30" Margin="3" x:Name="R2"/>
			<Button Width="75" Height="30" Margin="3" x:Name="R1"/>
		</StackPanel>
	</Grid>
</Window>
