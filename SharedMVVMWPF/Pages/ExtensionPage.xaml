<c:MyPageBase x:Class="MEFL.Pages.ExtensionPage"
             xmlns:c="clr-namespace:MEFL.Controls;assembly=MEFL.Controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MEFL.Pages"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" 
              LineBrush="{DynamicResource SYTLE_Standard_ColorBrush}"
            DataContext="{DynamicResource EPMV}">
    <c:MyPageBase.SideBar>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="c:ChangePageContentButton">
                    <Setter Property="SideBarBrush" Value="{DynamicResource SYTLE_Standard_ColorBrush}"/>
                </Style>
            </StackPanel.Resources>
            <c:ChangePageContentButton Content="AddIns" Tag="Content" Checked="ChangePageContentButton_Checked"/>
            <c:ChangePageContentButton Content="Get More..." Tag="GetMore" Checked="ChangePageContentButton_Checked"/>
        </StackPanel>
    </c:MyPageBase.SideBar>
    <Grid>
        <StackPanel Tag="Content" Name="ContentPage" Visibility="Hidden"/>
        <StackPanel Tag="GetMore" Visibility="Hidden"/>
    </Grid>
</c:MyPageBase>
