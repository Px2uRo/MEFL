<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MEFL.Controls">
    <Style TargetType="{x:Type local:MyCard}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:MyCard">
                    <Border
                        Background="{TemplateBinding Background}"
                        Style="{DynamicResource STYLE_PART_Border}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        x:Name="PART_Border">
                        <StackPanel>
                            <ContentPresenter x:Name="PART_Title" Height="40" Style="{DynamicResource STYLE_Normal_Title}" Content="{TemplateBinding Title}"/>
                            <ContentPresenter x:Name="PART_Content" Margin="25,0,23,15" Style="{DynamicResource STYLE_Normal_Content}"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Resources>
            <Style x:Key="STYLE_Normal_Title" TargetType="ContentPresenter">
                <Setter Property="Margin" Value="15,5,0,0"/>
                <Setter Property="TextBlock.FontWeight" Value="Bold"/>
                <Style.Resources>
                    <ResourceDictionary Source="..\..\aquastyle.xaml"/>
                </Style.Resources>
            </Style>
            <Style x:Key="STYLE_Normal_Content" TargetType="ContentPresenter">
                <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                <Style.Resources>
                    <ResourceDictionary Source="..\..\aquastyle.xaml"/>
                </Style.Resources>
            </Style>
            <Style x:Key="STYLE_PART_Border" TargetType="Border">
                <Style.Resources>
                    <ResourceDictionary Source="..\..\aquastyle.xaml"/>
                </Style.Resources>
            </Style>
        </Style.Resources>
    </Style>
</ResourceDictionary>
